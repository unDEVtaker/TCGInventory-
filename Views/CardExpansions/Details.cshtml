@model TCGInventory.Models.CardExpansion

@{
    ViewData["Title"] = "Details";
}

<h1>Información de la Expansion</h1>

<div class="row">
    <div class="titulo">
        <h4>Datos de la Expansion</h4>
        <hr />
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Company)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Company)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <!-- Puedes ajustar las dimensiones máximas según tus preferencias -->
        <img src="@Model.ImageUrl" alt="Expansion Image" class="img-thumbnail" style="max-width: 100%; max-height: 300px;" />
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
        <span class="glyphicon glyphicon-pencil"></span> Editar
    </a> |
    <a asp-action="Index" class="btn btn-primary">
        <span class="glyphicon glyphicon-arrow-left"></span> Volver al listado
    </a>
</div>
