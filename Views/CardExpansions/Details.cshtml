@model TCGInventory.Models.CardExpansion

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="display-4">Información de la Expansión</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Datos de la expansión</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Company)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Company)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-3 mt-md-0">
            <img src="@Model.ImageUrl" alt="Expansion Image" class="img-thumbnail" style="max-width: 100%; max-height: 300px;" />
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning mr-2">
            <span class="glyphicon glyphicon-pencil"></span> Editar
        </a> |
        <a asp-action="Index" class="btn btn-primary">
            <span class="glyphicon glyphicon-arrow-left"></span> Volver al listado
        </a>
    </div>
</div>