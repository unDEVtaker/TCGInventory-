@model IEnumerable<TCGInventory.Models.Card>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Cartas</h1>

<a asp-action="Create" class="btn btn-success">Ingresar Carta</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rarity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Defense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearReleased)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Set)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.ImageUrl" alt="Card Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(model => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rarity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Defense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearReleased)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Set)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>

<td>
    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
        Details
    </a> |
    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
        Edit
    </a> |
    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
         Delete
    </a>
</td>

        </tr>
}
    </tbody>
</table>
